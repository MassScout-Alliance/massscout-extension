{
  "manifest_version": 2,

  "name": "MassScout",
  "description": "Scouting data entry and team analysis application for the MassScout Alliance",
  "version": "1.0.1",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage"
  ]
}